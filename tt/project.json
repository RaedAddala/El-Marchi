{
  "name": "el-marchi-api",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "development",
      "options": {
        "target": "node",
        "outputPath": "dist/el-marchi-api",
        "main": "src/main.ts",
        "tsConfig": "tsconfig.app.json",
        "assets": [
          "src/assets"
        ],
        "generatePackageJson": true,
        "webpackConfig": "./webpack.config.js"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "inspection": true,
          "env": {
            "NODE_ENV": "development"
          }
        },
        "production": {
          "extractLicenses": true,
          "inspection": false,
          "env": {
            "NODE_ENV": "production"
          },
          "fileReplacements": [
            {
              "replace": "src/environments/environment.ts",
              "with": "src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "el-marchi-api:build",
        "inspect": true
      },
      "configurations": {
        "development": {
          "buildTarget": "el-marchi-api:build:development"
        },
        "production": {
          "buildTarget": "el-marchi-api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "src/**/*.ts"
        ],
        "fix": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/el-marchi-api"
      ],
      "options": {
        "jestConfig": "jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "compodoc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpx @compodoc/compodoc -p tsconfig.app.json -s",
        "cwd": "."
      },
      "configurations": {
        "dev": {
          "command": "pnpx @compodoc/compodoc -p tsconfig.app.json -d coverage/documentation"
        },
        "production": {
          "command": "pnpx @compodoc/compodoc -p tsconfig.app.json -d dist/documentation"
        }
      }
    }
  },
  "tags": []
}
