{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"types": [
			"node"
		],
		"paths": {
			"@app/*": [
				"./src/app/*"
			],
			"@env/*": [
				"./src/environments/*"
			]
		}
	},
	"files": [
		"src/main.ts",
		"src/main.server.ts",
		"server.ts"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts"
	],
	"exclude": [
		"jest.config.ts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts"
	]
}